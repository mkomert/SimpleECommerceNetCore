@using ETic.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}


<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Kullanıcı Listesi</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Yeni Kayıt</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Ad:
            </th>
            <th>
                Mail:
            </th>
            <th>
                Durum:
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.FirstName @item.LastName</td>
        <td>@item.UserName</td>
        @if (item.LockoutEnd > DateTime.Now && item.LockoutEnd != null)
        {
            <td>Engelli</td>
            <td style="width: 150px">
                <partial name="_LockUnlock" model="@item.Id"/>
            </td>
        }

        else
        {
            <td>Aktif</td>
            <td style="width: 150px">
                <partial name="_userListButtons" model="@item.Id" />
            </td>
        }





    </tr>
        }
    </table>
</div>

@section scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function (){
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
        })
        $(function (){
            var save = '@TempData["edit"]'
            if (save != '') {
                alertify.success(save);
            }
        })
        $(function (){
            var save = '@TempData["delete"]'
            if (save != '') {
                alertify.success(save);
            }
        })

    </script>



}