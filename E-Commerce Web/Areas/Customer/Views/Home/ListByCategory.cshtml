@using ETic.Models;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>



@{
    ViewData["Title"] = "listByCategory Page";
}






<!--
####################################################
C A R O U S E L
####################################################
-->
<hr />
<div id="carousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <a href="https://bootstrapcreative.com/">
                <!--
                If you need more browser support use https://scottjehl.github.io/picturefill/
                If a picture looks blurry on a retina device you can add a high resolution like this
                <source srcset="img/blog-post-1000x600-2.jpg, blog-post-1000x600-2@2x.jpg 2x" media="(min-width: 768px)">

                What image sizes should you use? This can help - https://codepen.io/JacobLett/pen/NjramL
                 -->
                <picture>
                    <source srcset="~/images/indir.jpg" media="(min-width: 1400px)">
                    <source srcset="https://dummyimage.com/1400x500/#007aeb/4196e5" media="(min-width: 769px)">
                    <source srcset="https://dummyimage.com/800x500/007aeb/4196e5" media="(min-width: 577px)">
                    <img srcset="https://dummyimage.com/600x500/007aeb/4196e5" alt="responsive image" class="d-block img-fluid">
                </picture>


            </a>
        </div>
        <!-- /.carousel-item -->
        <div class="carousel-item">
            <a href="https://bootstrapcreative.com/">
                <picture>

                    <source srcset="~/images/bann_2000x500.png" media="(min-width: 1400px)">
                    <source srcset="~/images/fsng.jpg" media="(min-width: 769px)">
                    <source srcset="https://dummyimage.com/800x500/007aeb/4196e5" media="(min-width: 577px)">
                    <img srcset="https://dummyimage.com/600x500/007aeb/4196e5" alt="responsive image" class="d-block img-fluid">
                </picture>


            </a>
        </div>
        <!-- /.carousel-item -->
        <div class="carousel-item">
            <a href="https://bootstrapcreative.com/">
                <picture>
                    <source srcset="~/images/fsng.jpg" media="(min-width: 1400px)">
                    <source srcset="https://dummyimage.com/1400x500/007aeb/4196e5" media="(min-width: 769px)">
                    <source srcset="https://dummyimage.com/800x500/007aeb/4196e5" media="(min-width: 577px)">
                    <img srcset="https://dummyimage.com/600x500/007aeb/4196e5" alt="responsive image" class="d-block img-fluid">
                </picture>


            </a>
        </div>
        <!-- /.carousel-item -->
    </div>
    <!-- /.carousel-inner -->
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- /.carousel -->
<!-- /.container -->
<!--slide end-->
<br />
<center><h5>ÜRÜNLERİMİZ</h5></center>
<hr />
@if (Model.Count > 0)
{
    <div class="row">







        @foreach (var product in Model)
        {




            <div class="col-12 col-md-6 col-lg-4 ">
                <br />
                <div class="card border-white shadow-lg">
                    <img class="card-img-top rounded-top shadow-lg " src="~/@product.Image" width="200px" height="250px" alt="Card image cap">
                    <div class="card-body border-white bg-light ">
                        <hr />
                        <h4 class="card-title"><a title="@product.Name">@product.Name</a></h4>

                        <div class="row">
                            <div class="col">
                                <p>@product.Price TL</p>
                            </div>
                            <div class="col">
                                <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" title="Sepete Ekle" class="btn btn-primary pull-right">Ürün Detayı</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>




        }



    </div>

    <div>
        <br />
        @Html.PagedListPager(Model, page => Url.Action("ListByCategory", new { page, pageSize = Model.PageSize }))
    </div>
}

else
{
    <br />
    <center>
        <div class="justify-content-md-center">
            <p> ARADIĞINIZ KATEGORIDE ÜRÜN BULUNAMADI</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Mevcut ürünler ile alışverişe başla!</a>
        </div>
    </center>
}



<style>
    /*
        Removes white gap between slides - chagnge to base color of slide images
        */
    .carousel {
        background: #007aeb;
    }

    /*
        Forces image to be 100% width and not max width of 100%
        */
    .carousel-item .img-fluid {
        width: 100%;
    }

    /*
        anchors are inline so you need ot make them block to go full width
        */
    .carousel-item a {
        display: block;
        width: 100%;
    }
</style>
