@{
    ViewData["Title"] = "Delete";
}


<br />

<h2 class="text-info">Yetki Sil</h2>
<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>Bu Yetkiyi Silmek İstediğinize Emin Misiniz? </h3>
        <div class="form-group row">
            <div class="col-2">
                <label>Yetki Adı:</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" readonly="readonly" name="name" value="@ViewBag.name" required="required" class="form-control" />
            </div>

        </div>



        <div class="form-group">
            <input type="submit" class="btn btn-primary" id="btn" value="Sil" />
            <a asp-action="Index" class="btn btn-success">Anasayfa  </a>
        </div>
    </div>
</form>

@section Scripts{

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}


}


