@model ETic.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = "Assign";
}

<h2 class="text-info">Rol Atama</h2>
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.msg</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>

            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>

        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Yetki Ver" />
            <a asp-action="Index" class="btn btn-success">Listeye Geri Dön</a>
        </div>
    </div>
</form>

@section Scripts{

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}


}


