@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<br />
<br />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <div class="row justify-content-center">
            <div class= "col-4">
                <div class="bg-dark p-3 shadow-lg rounded-lg">
                    <div class="pt-3">
                        <h2 class="text-white ">Oturum Aç</h2>
                        <hr class="bg-white" />
                    </div>
                    <section>
                        <form id="account" method="post" class="mt-5">
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control form-control-sm bg-light" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control form-control-sm bg-light" placeholder="Şifre" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <div class="checkbox">
                                    <input asp-for="Input.RememberMe" class="form-check-label text-light form-check-input" />
                                    <class class="form-check-label text-light"> @Html.DisplayNameFor(m => m.Input.RememberMe)</class>
                                </div>
                            </div>

                            <div class="mt-5">
                                <button type="submit" class="btn btn-sm btn-light col">Giriş</button>
                            </div>
                            <div class="text-center mt-2">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-warning">Şifreni mi unuttun?</a>
                            </div>
                            <div class="mt-5">
                                <p class="text-white text-center">
                                    Hesabın yok mu?
                                    <a asp-area="Customer" asp-controller="User" asp-action="Create" class="text-warning">Kayıt Ol</a>
                                </p>
                            </div>

                        </form>
                    </section>
                </div>

            </div>
        </div>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
